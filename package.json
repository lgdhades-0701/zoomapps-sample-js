{
  "name": "hello-zoom-apps",
  "version": "0.0.0",
  "type": "module",
  "exports": "./server",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "dev": "docker compose up zoom-app",
    "predev": "chmod +x ./gen-secrets.sh && $_",
    "build": "docker build --build-arg NODE_ENV=production -t zoom-app .",
    "prepare": "npx husky install",
    "preprepare": "[ -d .git ] && [ -f .env ] && git update-index --assume-unchanged .env || true",
    "clean": "docker compose down -v --remove-orphans --rmi local"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "~1.4.6",
    "debug": "~4.3.3",
    "dotenv": "^16.0.0",
    "dotenv-expand": "^8.0.1",
    "express": "~4.17.3",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "http-errors": "^2.0.0",
    "https-localhost": "^4.7.1",
    "mongoose": "^6.2.3",
    "mongoose-encryption": "^2.1.2",
    "morgan": "~1.10.0",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
